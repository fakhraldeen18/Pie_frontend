@model List<Category>
<partial name="_Notification" />
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Dashboard" asp-action="Create" class="btn btn-primary rounded-2"> <i class="bi bi-plus-circle"></i> Create new category</a>

		</div>
	</div>


	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Category id</th>
				<th>Category Name</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>
						@obj.CategoryId
					</td>
					<td>
						@obj.CategoryName
					</td>
					<td>
						@obj.Description
					</td>

					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Dashboard" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary rounded-2 mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

							<a asp-controller="Dashboard" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger rounded-2 mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>

	</table>
</div>
